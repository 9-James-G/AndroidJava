<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_color"
    tools:context=".MatEX">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/matView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#74F1E5"
            android:gravity="center"
            android:text="MATERIAL DESIGN"
            android:textColor="#05769C"
            android:textSize="28sp" />


        <TextView
            android:id="@+id/listdesc4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:fontFamily="monospace"
            android:text="Description"
            android:textColor="#000"
            android:textSize="20dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:src="@drawable/wanimg" />
        <TextView
            android:id="@+id/descrip1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:fontFamily="monospace"
            android:text="Description"
            android:textColor="#000"
            android:textSize="20dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="214dp"
            android:src="@drawable/punoimg" />
        <TextView
            android:id="@+id/descrip2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:fontFamily="monospace"
            android:text="Description"
            android:textColor="#000"
            android:textSize="20dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="195dp"
            android:src="@drawable/forimg" />

    </LinearLayout>

</ScrollView>