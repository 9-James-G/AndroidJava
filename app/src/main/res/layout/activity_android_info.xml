<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_color"
    tools:context=".AndroidActivityInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/activityView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#74F1E5"
            android:gravity="center"
            android:text="ANDROID ACTIVITY"
            android:textColor="#05769C"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/listdesc6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:fontFamily="monospace"
            android:text="@string/androidacttext"
            android:textColor="#000"
            android:textSize="20dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="552dp"
            android:layout_gravity="center"
            android:src="@drawable/actimg" />

    </LinearLayout>

</ScrollView>